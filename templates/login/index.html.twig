{% extends 'auth.html.twig' %}

{% block title %}Hello LoginController!{% endblock %}

{% block body %}
    <div class="relative flex flex-col justify-center h-screen overflow-hidden">
        <div class="card w-full p-6 m-auto bg-base-100 shadow-xl lg:max-w-lg">
            <div class="card-body">
                <div class="avatar justify-center">
                    <div class="w-28 rounded-xl">
                        <img src="https://placehold.co/200" alt="logo"/>
                    </div>
                </div>
                <h2 class="card-title justify-center">App Name Here</h2>
                <p class="text-center">optional line</p>
                {{ form_start(form) }}
                    {{ form_row(form.email) }}
                    {{ form_row(form.password) }}

                    <button type="submit" class="btn primary btn-block">Login</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
